{
  "name": "keeper",
  "description": "keeper is a tool for saving offline data account",
  "main": "main.js",
  "version": "0.4.0",
  "author": "Mattia Esposito",
  "license": "ISC",
  "scripts": {
    "ng": "ng",
    "start": "electron .",
    "build": "ng build --prod && npm run gen-main",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "gen-main": "cd src/electron && tsc && rollup --config && rmdir /Q /S dist",
    "pack-win32": "electron-builder -w --ia32",
    "pack-win64": "electron-builder -w --x64"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "~7.3.7",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/forms": "^7.2.15",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.2.15",
    "core-js": "^2.6.9",
    "crypto-js": "^3.1.9-1",
    "electron-log": "^3.0.6",
    "electron-store": "^4.0.0",
    "electron-updater": "^4.0.14",
    "fs-extra": "^7.0.1",
    "material-design-icons": "^3.0.1",
    "ngx-electron": "^2.1.1",
    "node-notifier": "^5.4.0",
    "os": "^0.1.1",
    "rxjs": "~6.3.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular/cli": "^7.3.8",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@types/crypto-js": "^3.1.43",
    "@types/fs-extra": "^8.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.0.12",
    "@types/node-notifier": "^5.4.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-minify": "^0.5.0",
    "codelyzer": "~4.5.0",
    "electron": "^9.4.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-minify": "^3.6.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "^3.2.4"
  },
  "build": {
    "appId": "com.keeper.app",
    "productName": "keeper",
    "copyright": "Copyright Â© Espotech 2019",
    "asar": true,
    "directories": {
      "output": "public/windows"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "MttEsposito",
        "repo": "Keeper",
        "private": false,
        "token": "47ca021be5e1785c9b3c5ba4b422bd9e0a505517",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "publisherName": "Espotech software",
      "icon": "icon.ico",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "shortcutName": "keeper",
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "uninstallDisplayName": "Uninstall"
    }
  }
}
